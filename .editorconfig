# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

[*]
indent_style = tab
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Prettier bug workaround - see: https://github.com/prettier/prettier/issues/4143
[*.scss]
end_of_line = lf

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2
